<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">
    
    <TextView android:id="@+id/compose_recipient_item_name"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	style="@style/list_item_headline" />
    	
    <TextView android:id="@+id/compose_recipient_item_number"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/compose_recipient_item_name" />
    	
   	<TextView android:id="@+id/compose_recipient_item_number_type"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_below="@id/compose_recipient_item_name"
   		android:layout_toRightOf="@id/compose_recipient_item_number"
   		android:layout_marginLeft="7dip" />
   		
   	<ImageView
   		android:layout_width="wrap_content"
   		android:layout_height="fill_parent"
   		android:background="@android:drawable/ic_input_delete"
   		android:layout_centerInParent="true"
   		android:layout_alignParentRight="true"
   		android:paddingLeft="7dip"
   		android:clickable="true"
   		android:onClick="onClickRemoveRecipient" />
    
</RelativeLayout>