<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/overview_after_sending_item"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content">
	        <TextView
	            android:id="@+id/overview_after_sending_item_receiver"
	            android:textSize="@dimen/item_title"
	            android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
	        <TextView
	            android:id="@+id/overview_after_sending_item_number"
	            android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="3dip"
        		android:singleLine="true" />
        </LinearLayout>
        <TextView
            android:id="@+id/overview_after_sending_item_summary"
            android:layout_width="fill_parent"
       		android:layout_height="wrap_content"
       		android:paddingTop="5dip"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/overview_after_sending_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="6dip"
        android:layout_gravity="right" />
</LinearLayout>