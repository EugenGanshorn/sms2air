<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="6dip">
        
	<TextView android:id="@+id/history_item_recipients"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:singleLine="true"
		style="@style/list_item_headline" />
		
	<TextView android:id="@+id/history_item_date"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentRight="true" />
		
	<TextView android:id="@+id/history_item_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/history_item_recipients"
		android:singleLine="true" />
        
</RelativeLayout>